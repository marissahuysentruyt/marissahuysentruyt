<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Raleway:wght@400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="../css/main.css" type="text/css">
  <link rel="icon" href="../public/usedresources/favicon.png" type="image/png">
</head>
<body>

  {% include 'page-header.njk' %}

    <main class="{{bodyClass}}">
       <section class="hero-section">
        <div class="back" id="invisible">
            <a href="../index.html">
                <div id="hover">
                    <img src="../public/usedresources/Arrow2.png" alt="Back"> 
                </div>
            </a>
            <a href="../index.html">
                <div id="slide">
                    Back Home
                </div>
            </a>
        </div>

           <section class="desktop">
               <div class="text-container">
                    <h1>{{projectTitle}}</h1>

                    <div class="details">
                        <h3>Overview</h3>
                        <p>
                            {{overview}} 
                        </p>

                        <!-- <div class="progress">
                            Completion: 100%
                            <div class="progress-bar"></div>
                        </div> -->
                        
                    </div>
               </div>

               <img src="{{desktopImage}}" alt="{{desktopAltText}}">
           </section>
       </section>

       <section class="mobile">

            <div class="text-container">
                <h3>Contribution</h3>
                <p>
                    {{contribution}}
                </p>
                <div class="tech">
                    <h3>Languages & Tech</h3>
                    <div class="languages">
                      
                      {% for item in languages %}
                        <img src="{{item.image}}" alt="{{item.alt}}" 
                        {% if className%} class="{{item.className}}" {% endif %}>
                      {% endfor %}
                    </div>
                </div>
            </div>

            <div class="image-container">
                <img src="{{mobileImage}}" alt="{{mobileAltText}}" class="screenshot">
            </div>
       </section>

       <section class="visit-sites">
           <h2>Take a look at the site in action!</h2>
           <a href="{{link}}" class="link2">
            Visit Site &nbsp;
            {% image 'src/public/usedresources/external-link.svg', '', 'Visit' %}
          </a>
       </section>
                
      <section class="cmp-contact">
        <div class="cmp-contact__container util-max-width">
          <p class="cmp-contact__text">
            {{ collabText.paragraph }} <strong class="util-bold">{{ collabText.bold }}</strong>
          </p>
          <a class="cmp-button cmp-button--primary" href="/contact/contact.html">{{ collabText.linkText }}</a>
        </div>
      </section>
    </main>
    
    
  {% include 'footer.njk' %}

</body>
</html>
